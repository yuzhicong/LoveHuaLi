<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.yzc.lovehuali.SignUpActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp"
            android:src="@drawable/app_icon"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="32dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etUserName"
            android:singleLine="true"
            android:hint="用户名"
            app:iconLeft="@drawable/icon_account"
            app:iconPadding="0dp"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etEmail"
            android:hint="邮箱"
            android:inputType="textEmailAddress"
            app:iconLeft="@drawable/icon_email"
            app:iconPadding="0dp"
            android:singleLine="true"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPassword"
            android:hint="密码"
            android:inputType="textPassword"
            app:iconLeft="@drawable/icon_lock"
            app:iconPadding="0dp"
            />



        <com.dd.CircularProgressButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/cpbtnSignUp"
            android:textColor="#ffffff"
            app:cpb_textComplete="注册成功,请登录邮箱激活"
            app:cpb_textError="注册失败"
            app:cpb_textIdle="注册"
            android:textSize="20dp"
            app:cpb_selectorIdle="@drawable/idle_state_selector"
            />
    </LinearLayout>

</LinearLayout>
